{
    "compilerOptions": {
        "module": "commonjs",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "outDir": "./build",
        "allowJs": true,
        "target": "es5",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ]
}